<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<% if !resource.errors.empty? %>
	    <div class="alert alert-warning" id="underheader"> 
	      <%= devise_error_messages! %>
	    </div>
  	<%end%>
	<div class="col-lg-4 col-md-12 col-sm-12 col-offset-4" id="underheader">
	    <article class="panel panel-info">
	        <header class="panel-heading", style="text-align: center">¿Olvido su contraseña?</header>
	        	<section class="panel-body">
	            	<div class="row">
	              		<div class="col-lg-12 col-md-12 col-sm-12">
							<div class="form-group">
							    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
							</div>
							<div class="form-group">
							    <%= f.submit "Enviar instrucciones", class: "btn btn-success btn-block" %>
							</div>
						</div>
					</div>
				</section>
		</article>
	</div>
<% end %>
