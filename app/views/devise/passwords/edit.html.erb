<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <% if !resource.errors.empty? %>
    <div class="container">
      <div class="alert alert-warning" id="underheader"> 
        <%= devise_error_messages! %>
      </div>
    </div>
  <%end%>

  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
          <div class="basic-login">
            <%= f.hidden_field :reset_password_token %>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-key fa-fw"></i></div>
                <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Nueva contraseña", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-key fa-fw"></i></div>
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar contraseña", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
                <%= f.submit "Cambiar contraseña", class: "btn pull-rightk" %>
                <div class="clearfix"></div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 
<div class="row" style="height: 75px"></div>

<script type="text/javascript">
  $(function(){
    $('.section-breadcrumbs').find('h1').text('Recuperación de contraseña');
  })
</script>



