<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% if !resource.errors.empty? %>
    <div class="alert alert-warning" id="underheader"> 
      <%= devise_error_messages! %>
    </div>
  <%end%>
  <div class="col-lg-4 col-md-12 col-sm-12 col-offset-4" id="underheader">
    <article class="panel panel-info">
      <header class="panel-heading" style="text-align: center">Ingrese sus datos</header>
      <section class="panel-body">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
              <label class="control-label"><span>Usuario</span></label>
              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="control-label"><span>Contraseña</span></label>
              <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: "form-control" %>
            </div>
          </div>
        </div>
      </section>
      <footer class="panel-footer">
        <%= f.submit "Entrar", class: "btn btn-success btn-block", style: "margin-bottom: 15px" %>
          <div class="row">
            <div class="col-6">
            </div> 
            <div class="col-6">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Olvidaste la contraseña?", new_password_path(resource_name),  style: "float: right" %><br />
              <% end -%>
            </div>
          </div>
      </footer>
    </article>
  </div>
<% end -%>
