<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if !resource.errors.empty? %>
    <div class="alert alert-warning" id="underheader"> 
      <%= devise_error_messages! %>
    </div>
  <%end%>
<div class="col-lg-4 col-md-12 col-sm-12 col-offset-4" id="underheader">
      <article class="panel panel-info">
          <header class="panel-heading" style="text-align: center">Llene los siguientes campos</header>
          <section class="panel-body">
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12">


                <div class="form-group">
                  <%= f.text_field :nombre, autofocus: true, required: true, placeholder: "Nombre", field: "Name", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.text_field :apellido, autofocus: true, required: true, placeholder: "Apellido", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.number_field :cedula, autofocus: true, required: true, placeholder: "Cedula", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.number_field :telefono, autofocus: true, required: true, placeholder: "Telefono celular", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Contraseña (min 8 caracacteres)", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "off", required: true, placeholder: "Confirme contraseña", class: "form-control" %>
                </div>

              </div>
            </div>
          </section>
          <footer class="panel-footer">
            <%= f.submit "Sing up", class: "btn btn-success btn-block", style: "margin-bottom: 15px" %>
          </footer>
        <% end -%>
  </article>
</div>


<%= render "devise/shared/links" %>
