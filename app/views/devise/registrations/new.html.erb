<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :nombre, autofocus: true, required: true, placeholder: "Nombre" %>
  </div>

  <div class="field">
    <%= f.text_field :apellido, autofocus: true, required: true, placeholder: "Apellido" %>
  </div>

  <div class="field">
    <%= f.number_field :cedula, autofocus: true, required: true, placeholder: "Cedula" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.number_field :telefono, autofocus: true, required: true, placeholder: "Telefono celular" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Contraseña" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, placeholder: "Confirme contraseña" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
