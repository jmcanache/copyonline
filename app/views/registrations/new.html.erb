<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if !resource.errors.empty? %>
    <div class="container">
      <div class="alert alert-warning" id="underheader"> 
        <%= devise_error_messages! %>
      </div>
    </div>
  <%end%>

  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-offset-4 col-md-4">
          <div class="basic-login">
            <form role="form">
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-user fa-fw"></i></div>
                  <%= f.text_field :nombre, autofocus: true, required: true, placeholder: "Nombre", field: "Name", class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-user-plus fa-fw"></i></div>
                  <%= f.text_field :apellido, required: true, placeholder: "Apellido", class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-sort-numeric-asc fa-fw"></i></div>
                  <%= f.number_field :cedula, required: true, placeholder: "Cédula", class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></div>
                  <%= f.email_field :email, required: true, placeholder: "Email", class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-mobile fa-fw"></i></div>
                  <%= f.number_field :telefono, required: true, placeholder: "Telefono celular", class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-key fa-fw"></i></div>
                  <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Contraseña (min 8 caracacteres)", class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-key fa-fw"></i></div>
                  <%= f.password_field :password_confirmation, autocomplete: "off", required: true, placeholder: "Confirme contraseña", class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.submit "Registrarse", data: { disable_with: 'Registrarse' }, remote: true, class: "btn pull-right" %>
                <div class="clearfix"></div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end -%>


<%= render "devise/shared/links" %>
